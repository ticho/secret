<div class="container">
<h1>Change your password</h1>
<%= form_tag(user_path , method: "patch") do |f| %>

<div class="form-group">
<%= label_tag('password', content = "Password") %>
<%= password_field_tag(:password, content = nil, {class: "form-control", placeholder: "Password", size: 15}) %>
</div>

<div class="form-group">
<%= label_tag('password_confirmation', content = "Password Confirmation") %>
<%= password_field_tag(:password_confirmation, content = nil, {class: "form-control", placeholder: "Password", size: 15}) %>
</div>

<%= submit_tag("Change password", {class: 'btn btn-primary btn-lg btn-submit'}) %>

<% end %>
<br>
<%= link_to("Back to home", content=root_path, options = {class: 'btn btn-sm btn-primary'}) %>

</div>